<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    tools:context=".view.search.search.SearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search_by_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_by"
            android:textColor="@color/md_theme_primary"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/search_by_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/search_background"
            android:text="@string/search_by_name_button"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/search_by_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_by_label" />

        <Button
            android:id="@+id/search_by_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/search_background"
            android:text="@string/search_by_category_button"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_by_name"
            app:layout_constraintTop_toBottomOf="@id/search_by_label" />

        <Button
            android:id="@+id/search_by_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/search_background"
            android:text="@string/search_by_area_button"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/search_by_ingredient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_by_name" />

        <Button
            android:id="@+id/search_by_ingredient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/search_background"
            android:text="@string/search_by_ingredient_button"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_by_area"
            app:layout_constraintTop_toBottomOf="@id/search_by_category" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>